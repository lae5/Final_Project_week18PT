package com.promineotech.candle.controller;

import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestParam;
import com.promineotech.candle.entity.Option;
import com.promineotech.candle.service.CandleSalesService;

public class DefaultCandleSalesController {
	@Autowired
	private CandleSalesService candleSalesService;
	
	public List<Option> fetchOptions(Option candle_type, 
			String size, String scent) {
		
	    log.info("candle_type={}, size{}, scent{}, candle_type, size, scent");
	    return candleSalesService.fetchOptions(candle_type, size, scent);

	}
}
